<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/policetitre"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="64sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ListeJoueur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Joueur1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FieldJoueur1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sylfaen"
                    android:inputType="text"
                    android:text="Joueur 1"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/BoutonJoueur1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:textOff="Homme"
                    android:textOn="Femme"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Joueur2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FieldJoueur2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sylfaen"
                    android:inputType="text"
                    android:text="Joueur 2"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/BoutonJoueur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:checked="false"
                    android:textOff="Homme"
                    android:textOn="Femme" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Joueur3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FieldJoueur3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sylfaen"
                    android:inputType="text"
                    android:text="Joueur 3"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/BoutonJoueur3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:textOff="Homme"
                    android:textOn="Femme"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Joueur4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FieldJoueur4"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/sylfaen"
                    android:inputType="text"
                    android:text="Joueur 4"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/BoutonJoueur4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:textOff="Homme"
                    android:textOn="Femme"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/BoutonAdd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_buttonoui"
        android:layout_marginLeft="50dp"/>


    <Button
        android:id="@+id/BoutonJouer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100sp"
        android:layout_marginTop="50dp"
        android:text="A poil !" />


</LinearLayout>